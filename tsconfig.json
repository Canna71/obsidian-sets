{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
	"strictNullChecks": true,
	"esModuleInterop": true,
    // "allowSyntheticDefaultImports": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ],
	"jsx": "preserve",
    "jsxImportSource": "solid-js"
  },
  "include": [
    "**/*.ts","**/*.tsx","**/*.svg"
 ]
}
